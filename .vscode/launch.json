{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "UDS",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/UDS_Emulator.exe",
            "stopAtEntry": false,
            "MIMode": "gdb",
            "cwd" : "${workspaceFolder}/build/bin",
            "setupCommands": [
                {   // Display content in STL containers pretty
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "UnitTest",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/UNIT_TESTS.exe",
            "stopAtEntry": false,
            "MIMode": "gdb",
            "cwd" : "${workspaceFolder}/build/bin",
            "setupCommands": [
                {   // Display content in STL containers pretty
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}